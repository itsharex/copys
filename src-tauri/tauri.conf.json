{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "copys",
    "version": "0.1.2"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "globalShortcut": {
        "all": true
      },
      "window": {
        "all": false,
        "show": true,
        "hide": true,
        "close": true,
        "setFocus": true,
        "minimize": true,
        "unminimize": true,
        "setSize": true,
        "setPosition": true
      },
      "clipboard": {
        "all": true,
        "writeText": true,
        "readText": true
      }
    },
    "windows": [
      {
        "title": "copys",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.sikara.copys.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/jacket-sikaha/copys/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDE0OTJBOTE5OTI2QzkzRUUKUldUdWsyeVNHYW1TRkU3MU1jOHVjdzJTSTNyeklldmM3WWcxelJGNmlqeHZQcDMwQjc0NmJvWGMK",
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
